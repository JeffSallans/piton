{
  "name": "piton",
  "displayName": "Piton",
  "description": "Simple SQL quality checking tool",
  "version": "0.9.0",
  "icon": "./resources/pitons.png",
  "repository": {
    "url": "https://github.com/JeffSallans/piton"
  },
  "publisher": "JeffSallans",
  "license": "MIT",
  "engines": {
    "vscode": "^1.88.0"
  },
  "categories": [
    "Testing",
    "Data Science"
  ],
  "activationEvents": [
    "onLanguage:sql"
  ],
  "main": "./out/extension.js",
  "buildmain": "./dist/extension.js",
  "devmain": "./out/extension.js",
  "gypfile": false,
  "contributes": {
    "commands": [
      {
        "command": "piton.helloWorld",
        "title": "Piton Hello World"
      },
      {
        "command": "piton.scanDocument",
        "title": "Piton Parse File"
      },
      {
        "command": "piton.runFile",
        "title": "Piton Run File"
      },
      {
        "command": "piton.runAll",
        "title": "Piton Run All Files",
        "icon": "$(play)"
      },
      {
        "command": "piton.parseAll",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "piton.createExample",
        "title": "Create Example"
      },
      {
        "command": "piton.updatePassword",
        "title": "Update Password"
      },
      {
        "command": "piton.approveFilePart",
        "title": "Approve Result",
        "icon": "$(check)"
      },
      {
        "command": "piton.denyFilePart",
        "title": "Deny Result",
        "icon": "$(discard)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "piton-explorer",
          "title": "Piton Explorer",
          "icon": "resources/dark/pitons.svg"
        }
      ]
    },
    "views": {
      "piton-explorer": [
        {
          "id": "pitonFiles",
          "name": "Piton Files",
          "icon": "resources/dark/pitons.svg",
          "contextualTitle": "Piton Explorer"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "pitonFiles",
        "contents": "No piton files found [learn more](https://github.com/JeffSallans/piton).\n[Add Piton Example](command:piton.createExample)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "piton.runAll",
          "when": "view == pitonFiles",
          "group": "navigation"
        },
        {
          "command": "piton.parseAll",
          "when": "view == pitonFiles",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "piton.approveFilePart",
          "when": "view == pitonFiles && viewItem == piton_check",
          "group": "inline"
        },
        {
          "command": "piton.denyFilePart",
          "when": "view == pitonFiles && viewItem == piton_check",
          "group": "inline"
        }
      ]
    },
    "grammars": [
      {
        "path": "./syntaxes/script-injection.json",
        "scopeName": "piton-sql.script-injection",
        "injectTo": [
          "source.sql"
        ]
      },
      {
        "path": "./syntaxes/injection.json",
        "scopeName": "piton-comment.injection",
        "injectTo": [
          "source.sql"
        ],
        "tokenTypes": {
          "keyword.piton-connectionString": "other"
        }
      }
    ]
  },
  "scripts": {
    "vscode:package": "vsce package",
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test",
    "WIP:vscode:prepublish": "npm run package",
    "webpack": "webpack --mode development",
    "webpack-dev": "webpack --mode development --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "test-compile": "tsc -p ./"
  },
  "devDependencies": {
    "@esbuilder/html": "^0.0.6",
    "@types/lodash": "^4.17.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/oracledb": "^6.4.0",
    "@types/pg": "^8.11.5",
    "@types/vscode": "^1.88.0",
    "@typescript-eslint/eslint-plugin": "^7.4.0",
    "@typescript-eslint/parser": "^7.4.0",
    "@vscode/test-cli": "^0.0.8",
    "@vscode/test-electron": "^2.3.9",
    "esbuild": "^0.21.3",
    "eslint": "^8.57.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@mapbox/node-pre-gyp": "^1.0.0",
    "aws-sdk": "^2.1087.0",
    "dayjs": "^1.11.10",
    "duckdb": "^0.10.2",
    "fast-fuzzy": "^1.12.0",
    "glob": "^10.3.12",
    "json-2-csv": "^5.5.1",
    "lodash": "^4.17.21",
    "mock-aws-s3": "^4.0.2",
    "mssql": "^10.0.2",
    "nock": "^12.0.3",
    "oracledb": "^6.4.0",
    "pg": "^8.11.5",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7",
    "vscode-textmate": "^9.0.0"
  }
}
